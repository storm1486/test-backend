  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://composedb.js.org",
  "keywords": [
    "ceramic",
    "composedb",
    "developer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/js-composedb",
    "directory": "packages/devtools-node"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "dependencies": {
    "@ceramicnetwork/http-client": "^3.0.5",
    "fs-extra": "^11.2.0",
    "@composedb/client": "^0.6.0",
    "@composedb/server": "^0.6.0",
    "@composedb/runtime": "^0.6.0"
  },
  "peerDependencies": {
    "@composedb/devtools": "^0.6.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "dids": "^4.0.4",
    "@composedb/devtools": "^0.6.1",
    "@composedb/types": "^0.6.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  },
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src --fix"
  }
}